{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"strict": true,
		"jsx": "preserve",
		//"importHelpers": true,
		"strictPropertyInitialization": false,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": [
			"webpack-env"
		],
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"server/**/*.ts",
		"shared/**/*.ts",
		"tests/**/*.ts",
		"tests/**/*.tsx", 
		"src/twitch-oauth.ts"
	],
	"exclude": [
		"node_modules"
	]
}